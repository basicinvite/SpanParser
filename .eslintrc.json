{
    "extends": ["airbnb-base", "plugin:prettier/recommended"],
    "globals": {
        "fetch": true,
        "navigator": true,
        "describe": true,
        "beforeAll": true,
        "afterAll": true,
        "beforeEach": true,
        "afterEach": true,
        "test": true,
        "expect": true,
        "it": true,
        "before": true,
        "after": true
    },
    "rules": {
        "object-curly-newline": 0,
        "class-methods-use-this": 0,
        "func-names": 0,
        "no-bitwise": 0,
        "no-underscore-dangle": 0,
        "no-console": 0,
        "no-use-before-define": 0,
        "no-restricted-globals": ["error", "event", "fdescribe"],
        "no-restricted-properties": [2, {
            "object": "describe",
            "property": "only"
        }]
    }
}